# Development environment variables for roop-unleashed

# =============================================================================
# GPU Configuration (Development)
# =============================================================================
CUDA_VISIBLE_DEVICES=all
NVIDIA_VISIBLE_DEVICES=all
NVIDIA_DRIVER_CAPABILITIES=compute,utility,video
ROOP_EXECUTION_PROVIDER=cuda
ROOP_EXECUTION_THREADS=2
ROOP_MAX_MEMORY=0

# =============================================================================
# Performance Optimization (Development)
# =============================================================================
PYTORCH_CUDA_ALLOC_CONF=max_split_size_mb:64
CUDA_LAUNCH_BLOCKING=1
CUDA_CACHE_DISABLE=0
OMP_NUM_THREADS=1

# TensorRT Support (disabled for development)
ENABLE_TENSORRT=false

# =============================================================================
# Application Settings (Development)
# =============================================================================
ROOP_SERVER_NAME=0.0.0.0
ROOP_SERVER_PORT=7860
ROOP_SERVER_SHARE=false
ROOP_OUTPUT_FORMAT=mp4
ROOP_VIDEO_CODEC=libx264
ROOP_VIDEO_QUALITY=18
ROOP_MAX_THREADS=2
ROOP_MEMORY_LIMIT=0
ROOP_FRAME_BUFFER_SIZE=2

# =============================================================================
# Enhanced Features (Development)
# =============================================================================
ROOP_ENABLE_ENHANCED_PROCESSING=true
ROOP_BLEND_METHOD=multiband
ROOP_QUALITY_THRESHOLD=0.3
ROOP_ADAPTIVE_DETECTION=true
ROOP_TEMPORAL_CONSISTENCY=true
ROOP_ADVANCED_INPAINTING=true

# =============================================================================
# Development Features
# =============================================================================
ROOP_ENABLE_PROFILING=true
ROOP_AUTO_RELOAD=true
ROOP_ENABLE_DEBUG=true
JUPYTER_ENABLE_LAB=yes
TENSORBOARD_ENABLE=yes

# =============================================================================
# AI/LLM Configuration (Development)
# =============================================================================
ROOP_AI_ENABLED=false
ROOP_LOCAL_LLM_PROVIDER=ollama
ROOP_LOCAL_LLM_BASE_URL=http://ollama:11434
ROOP_LOCAL_LLM_MODEL=llama3.2:3b
ROOP_RAG_ENABLED=false

# =============================================================================
# Security Settings (Relaxed for Development)
# =============================================================================
ROOP_VALIDATE_INPUTS=true
ROOP_MAX_FILE_SIZE=50MB
ROOP_SANITIZE_PATHS=true

# =============================================================================
# Logging Configuration (Verbose for Development)
# =============================================================================
ROOP_LOG_LEVEL=DEBUG
ROOP_DETAILED_LOGGING=true
ROOP_LOG_FILE=/app/logs/roop-dev.log
ROOP_CONSOLE_LOGGING=true

# =============================================================================
# Development Debugging
# =============================================================================
PYTHONPATH=/app
PYTHONDONTWRITEBYTECODE=1
PYTHONUNBUFFERED=1

# =============================================================================
# Volume Paths (Development)
# =============================================================================
MODELS_PATH=./models
OUTPUT_PATH=./output
TEMP_PATH=./temp
LOGS_PATH=./logs
KNOWLEDGE_PATH=./knowledge
RAG_VECTORS_PATH=./rag_vectors